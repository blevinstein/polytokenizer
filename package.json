{
  "name": "polytokenizer",
  "version": "1.0.4",
  "description": "A lightweight, multi-provider Node.js library for text tokenization, embedding, and context management",
  "main": "dist/index.js",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest --run",
    "test:watch": "vitest --watch",
    "test:unit": "vitest --run tests/providers tests/model-validation.test.ts",
    "test:integration": "npx dotenv-cli -- vitest --run tests/integration",
    "test:all": "npm run test:unit && npm run test:integration",
    "test:coverage": "vitest --coverage --run",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "prepare": "npm run build"
  },
  "keywords": [
    "tokenizer",
    "embedding",
    "openai",
    "anthropic",
    "google",
    "gemini",
    "ai",
    "llm",
    "nlp"
  ],
  "author": "polytokenizer",
  "license": "MIT",
  "dependencies": {
    "@google/generative-ai": "^0.19.0",
    "async": "^3.2.6",
    "google-auth-library": "^9.15.1",
    "openai": "^4.67.3",
    "tiktoken": "^1.0.17"
  },
  "devDependencies": {
    "@types/async": "^3.2.24",
    "@types/node": "^22.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "@vitest/coverage-v8": "^2.0.0",
    "dotenv": "^16.4.7",
    "dotenv-cli": "^8.0.0",
    "eslint": "^9.0.0",
    "typescript": "^5.6.0",
    "vitest": "^2.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/blevinstein/polytokenizer.git"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ]
}
